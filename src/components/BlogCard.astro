---
const { posts, name } = Astro.props
---

<div class="w-2/3 mx-auto my-3">
    <p class="flex justify-between items-center mb-4">
        <span class="text-xl text-indigo-600 text-left font-black border-btm capitalize">{name}</span>
        <span class="text-red-600">
            <a class="hover:underline" href={`/${name}`}>Read More -&gt;</a>
        </span>            
    </p>
    <div class="grid grid-cols-3 gap-3">
        {posts.map(post => (
            <a href={`/${name}/${post.slug}/`} class="hover:text-pink-600">
                <article class="border-2 p-5">
                    <img class="mb-3 w-full p-3" 
                        src={post._embedded ? 
                            post._embedded['wp:featuredmedia']['0'].media_details.sizes.medium.source_url 
                            : null} />
                    <h2 class="font-black text-3xl text-center">
                    {post.title.rendered}
                    </h2>    
                </article>
            </a>
        ))}
    </div>
</div>    